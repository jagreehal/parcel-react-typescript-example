{
  "name": "parcel-react-typescript-example",
  "version": "1.0.0",
  "scripts": {
    "build": "NODE_ENV=production parcel build ./src/index.html --public-url '.'",
    "serve": "npm run build build && serve ./dist",
    "start": "NODE_ENV=development parcel ./src/index.html",
    "test": "jest"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.5",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^21.1.8",
    "@types/node": "^8.5.1",
    "@types/prettier": "^1.9.0",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.30",
    "@types/react-addons-test-utils": "^0.14.20",
    "@types/react-dom": "^16.0.3",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "jest": "^21.2.1",
    "parcel-bundler": "^1.2.0",
    "prettier": "^1.9.2",
    "react-addons-test-utils": "^15.6.2",
    "serve": "^6.4.1",
    "ts-jest": "^21.2.4",
    "tslint-config-airbnb": "5.4.2",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "mapCoverage": true,
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/test/utils/fileTransform.js",
      "^.+\\.css$": "<rootDir>/test/utils/cssTransform.js"
    }
  }
}
