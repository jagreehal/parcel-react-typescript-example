{
  "name": "parcel-react-typescript-example",
  "version": "1.0.0",
  "scripts": {
    "build": "NODE_ENV=production parcel build ./src/index.html --public-url '.'",
    "serve": "npm run build && serve ./dist",
    "start": "NODE_ENV=development parcel ./src/index.html",
    "test": "jest"
  },
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "@types/prettier": "^1.13.2",
    "@types/prop-types": "^15.5.3",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "emotion": "9.2.6",
    "jest": "^23.4.1",
    "jest-dom": "1.8.1",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.13.7",
    "react-emotion": "^9.2.4",
    "react-testing-library": "^4.1.3",
    "serve": "^9.2.0",
    "ts-jest": "^23.0.1",
    "tslint-config-airbnb": "5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/test/utils/fileTransform.js",
      "^.+\\.css$": "<rootDir>/test/utils/cssTransform.js"
    }
  }
}